<%= form_for(@game) do |f| %>
  <%= render 'shared/error_messages' %>
  <%= f.label :letter %>
  <table>
  <th> <%= f.text_field :letter, :value => "", class: 'text_field', :maxlength => 1%> </th>
  <th> <%= f.submit "Submit", class: "button" %> </th>
  </table>
  <% if flash[:success]%>
    <div class="alert alert-success"><%= flash[:success] %></div>
    <% if flash[:win]%>
      <%= render "shared/successful_game" %>
    <% end %>
  <% end %>

  <% if flash[:incorrect]%>
    <div class="alert alert-warning"><%= flash[:incorrect] %></div>
    <% if flash[:loss]%>
      <%= render "shared/unsuccessful_game" %>
    <% end %>
  <% end %>
<% end %>